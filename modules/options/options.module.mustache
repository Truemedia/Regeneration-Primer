<a href="#" data-toggle="dropdown" class="dropdown-toggle">Options <b class="caret"></b></a>
<ul class="dropdown-menu">
	<li class="nav-header">{{main_options}}</li>
    <li class="divider"></li>
            	 		
    <!-- Main buttons -->
    <li class="option-item">
        <a href="#" id="debug_toggle" data-toggle="tooltip" data-placement="right" title="Click to show or hide debugging tools (Developers only)">
			<span class="label label-warning"><i data-bind="css: currentIcon" class="icon-white"></i></span> Enable/Disable Debugging
		</a>
    </li>
    <li class="option-item">
    	<a href="#" id="audio_toggle" data-toggle="tooltip" data-placement="right" title="Click to mute or unmute the background music">
			<span class="label label-info"><i class="icon-volume-off icon-white"></i></span> Mute/unmute background music
		</a>
    </li>
    <li class="option-item">
    	<a href="#" id="header_toggle" data-toggle="tooltip" data-placement="right" title="Click to hide or show the header">
			<span class="label"><i class="icon-circle-arrow-up icon-white"></i></span> Hide header
		</a>
	</li>
    <li class="divider"></li>
    <li class="nav-header">{{customize}}</li>
    <li class="divider"></li>
              				
    <!-- Customizations -->
    <li>
        <a class="well" href="#" id="controls_tooltip" data-content="And here's some amazing content. It's very engaging. right?" title="" data-toggle="popover" class="btn btn-large btn-danger" data-original-title="A Title">Click to toggle popover</a>
			<span class="label label-info"><i class="icon-question-sign icon-white"></i></span> Controls
		</a>
	</li>
    <li class="option-item">
        <a class="well" href="#theme_window" data-toggle="modal">
        	<span class="label label-inverse"><i class="icon-eye-open icon-white"></i></span> Theme
        </a>
    </li>
</ul> 