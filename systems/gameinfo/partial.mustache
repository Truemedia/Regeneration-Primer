<!-- Game Info -->
<div class="modal-header">
	<h3 id="gameinfo-system-name">Game info</h3>
</div>
<div class="modal-body">
	<ul class="thumbnails">
    	<li class="span4">
    		<div class="thumbnail">
   				<img data-src="holder.js/300x200" alt="">
    			<h3>{{gamename}}</h3>
    			<p>{{gamedescription}}</p>
    		</div>
		</li>
    </ul>
	<!-- External links -->
	<div class="btn-group">
    	<button class="btn">Buy now</button>
    	<button class="btn">Reviews</button>
    	<button class="btn">Trailers</button>
    	<button class="btn">Screenshots</button>
    </div>
</div>
<div class="modal-footer">
	<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
</div>