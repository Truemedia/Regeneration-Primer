<!-- Controls -->
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 id="controls-system-name">{{trans.controls_heading_noun}}</h4>
		</div>
		<div class="modal-body">
			<h3 id="tabs">{{trans.controls_heading_phrs}}</h3>
			{{#items}}
			<h4>Using the {{name}} layout</h4>
			<div id="osk">
				{{#keysets}}
				<div class="btn-toolbar" role="toolbar">
					<div class="btn-group btn-group-justified">
						{{#keys}}
						<div class="btn-group">
							<button type="button"
									class="btn btn-info"
									data-placement="bottom"
									data-trigger="hover"
									data-toggle="popover"
									title="Key description"
									data-content="{{visual.legend.text}}">
								<span class="fa {{visual.legend.icon}}"></span>
								<span>{{functional.content}}</span>
							</button>
						</div>
						{{/keys}}
					</div>
				</div>
				{{/keysets}}
			</div>
			{{/items}}
			<br />
			<ul class="nav nav-tabs">
				<li>
					<a data-toggle="tab" href="#screens"><i class="icon-tablet"></i>{{trans.screens_phrs}}</a>
				</li>
				<li>
					<a data-toggle="tab" href="#player"><i class="icon-male"></i>{{trans.player_phrs}}</a>
				</li>
				<li>
					<a data-toggle="tab" href="#weapons"><i class="icon-rocket"></i>{{trans.weapons_phrs}}</a>
				</li>
			</ul>
			<div class="tabbable">
				<div class="tab-content">
					<div id="screens" class="tab-pane">
						<p>
							<ul style="list-style: none;">
								<li>
									<i class="icon-keyboard"></i> <b class="text-danger">{{trans.press_verb}}</b>
									<b class="text-primary">{{screens.toggle_points}}</b> <em>{{trans.toggle-points_phrs}}</em>
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-warning">{{trans.press_verb}}</b>
									<b class="text-primary">{{screens.toggle_profile}}</b> <em>{{trans.toggle-profile_phrs}}</em>
								</li>
							</ul>
						</p>
					</div>
					<div id="player" class="tab-pane active">
						<p>
							<ul style="list-style: none;">
								<li>
									<i class="icon-keyboard"></i> <b class="text-warning">{{trans.hold_verb}}</b>
									<b class="text-primary">{{player.move_up}}</b> <em>{{trans.move-up_phrs}}</em>
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-warning">{{trans.hold_verb}}</b>
									<b class="text-primary">{{player.move_left}}</b> <em>{{trans.move-left_phrs}}</em>
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-warning">{{trans.hold_verb}} </b>
									<b class="text-primary">{{player.move_down}}</b> <em>{{trans.move-down_phrs}}</em>
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-warning">{{trans.hold_verb}} </b>
									<b class="text-primary">{{player.move_right}}</b> <em>{{trans.move-right_phrs}}</em>
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-danger">{{trans.press_verb}} </b>
									<b class="text-primary">{{player.pickup}}</b> <em>{{trans.pickup_phrs}}</em>
								</li>
							</ul>
						</p>
					</div>
					<div id="weapons" class="tab-pane">
						<p>
							<ul style="list-style: none;">
								<li>
									<i class="icon-laptop"></i>
									<b class="text-primary">{{weapons.operate}}</b> <em>{{trans.mouse_noun}}</em>
									<b>{{trans.or_phrs}}</b>
									<br />
									<i class="icon-keyboard"></i>
									<b class="text-danger">{{trans.press_verb}}</b>
									<b class="text-primary">{{weapons.operate_alt}}</b> <em>{{trans.to-shoot_phrs}}</em>
									<hr />
								</li>
								<li>
									<i class="icon-laptop"></i>
									<b class="text-primary">{{weapons.push}}</b> <em>{{trans.mouse_noun}}</em>
									<b>{{trans.or_phrs}}</b>
									<br />
									<i class="icon-keyboard"></i>
									<b class="text-danger">{{trans.press_verb}}</b>
									<b class="text-primary">{{weapons.push_alt}}</b> <em>{{trans.to-punch_phrs}}</em>
									<hr />
								</li>
							</ul>
						</p>
						<p>
							<ul style="list-style: none;">
								<li>
									<i class="icon-keyboard"></i> <b class="text-danger">{{trans.press_verb}}</b>
									<b class="text-primary">{{weapons.throw_away_mag}}</b> <em>{{trans.to-throw-away-mag_phrs}}</em>
									<img src="multimedia/default-contentpack/images/controls/PS3/faceButton0.png" />
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-danger">{{trans.press_verb}}</b>
									<b class="text-primary">{{weapons.enter_new_mag}}</b> <em>{{trans.to-enter-new-mag_phrs}}</em>
									<img src="multimedia/default-contentpack/images/controls/PS3/faceButton1.png" />
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-danger">{{trans.press_verb}}</b>
									<b class="text-primary">{{weapons.reconnect_new_mag}}</b> <em>{{trans.to-reconnect-new-mag_phrs}}</em>
									<img src="multimedia/default-contentpack/images/controls/PS3/faceButton2.png" />
								</li>
								<li>
									<i class="icon-keyboard"></i> <b class="text-danger">{{trans.press_verb}}</b>
									<b class="text-primary">{{weapons.chamber}}</b> <em>{{trans.to-chamber_phrs}}</em>
									<img src="multimedia/default-contentpack/images/controls/PS3/faceButton3.png" />
								</li>
							</ul>
						</p>
					</div>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">{{trans.close_verb}}</button>
		</div>
	</div>
</div>