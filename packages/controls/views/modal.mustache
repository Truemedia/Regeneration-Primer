<!-- Controls -->
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 id="controls-system-name">{{trans.controls_heading_noun}}</h4>
		</div>
		<div class="modal-body">
			<h3 id="tabs">{{trans.controls_heading_phrs}}</h3>
			<ul class="nav nav-tabs">
				<li>
					<a data-toggle="tab" href="#screens">{{trans.screens_phrs}}</a>
				</li>
				<li>
					<a data-toggle="tab" href="#player">{{trans.player_phrs}}</a>
				</li>
				<li>
					<a data-toggle="tab" href="#weapons">{{trans.weapons_phrs}}</a>
				</li>
			</ul>
			<div class="tabbable">
				<div class="tab-content">
					<div id="screens" class="tab-pane">
						<p>
							<span class="control_instruction"><span class="key_expression_press">{{trans.press_verb}} </span><span class="key_hint">{{screens.toggle_points}}</span> {{trans.toggle-points_phrs}}</span>
							<span class="control_instruction"><span class="key_expression_press">{{trans.press_verb}} </span><span class="key_hint">{{screens.toggle_profile}}</span> {{trans.toggle-profile_phrs}}</span>
						</p>
					</div>
					<div id="player" class="tab-pane active">
						<p>
							<span class="control_instruction"><span class="key_expression_hold">{{trans.hold_verb}} </span><span class="key_hint">{{player.move_up}}</span> {{trans.move-up_phrs}}</span>
							<span class="control_instruction"><span class="key_expression_hold">{{trans.hold_verb}} </span><span class="key_hint">{{player.move_left}}</span> {{trans.move-left_phrs}}</span>
							<span class="control_instruction"><span class="key_expression_hold">{{trans.hold_verb}} </span><span class="key_hint">{{player.move_down}}</span> {{trans.move-down_phrs}}</span>
							<span class="control_instruction"><span class="key_expression_hold">{{trans.hold_verb}} </span><span class="key_hint">{{player.move_right}}</span> {{trans.move-right_phrs}}</span>
							<span class="control_instruction"><span class="key_expression_press">{{trans.press_verb}} </span><span class="key_hint">{{player.pickup}}</span> {{trans.pickup_phrs}}</span>
						</p>
					</div>
					<div id="weapons" class="tab-pane">
						<p>
							<span class="control_instruction">
								<span class="key_hint">{{weapons.operate}}</span> {{trans.mouse_noun}} <b>{{trans.or_phrs}}</b>
								<span class="key_expression_press">{{trans.press_verb}} </span>
								<span class="key_hint">{{weapons.operate_alt}}</span><br /> {{trans.to-shoot_phrs}}
							</span>
							<span class="control_instruction">
								<span class="key_hint">{{weapons.push}}</span> {{trans.mouse_noun}} <b>{{trans.or_phrs}}</b>
								<span class="key_expression_press">{{trans.press_verb}} </span><span class="key_hint">{{weapons.push_alt}}</span><br /> {{trans.to-punch_phrs}}
							</span>
							<span class="control_instruction"><span class="key_expression_press">{{trans.press_verb}} </span><span class="key_hint">{{weapons.throw_away_mag}}</span> {{trans.to-throw-away-mag_phrs}}</span>
							<span class="control_instruction"><span class="key_expression_press">{{trans.press_verb}} </span><span class="key_hint">{{weapons.enter_new_mag}}</span> {{trans.to-enter-new-mag_phrs}}</span>
							<span class="control_instruction"><span class="key_expression_press">{{trans.press_verb}} </span><span class="key_hint">{{weapons.reconnect_new_mag}}</span> {{trans.to-reconnect-new-mag_phrs}}</span>
							<span class="control_instruction"><span class="key_expression_press">{{trans.press_verb}} </span><span class="key_hint">{{weapons.chamber}}</span> {{trans.to-chamber_phrs}}</span>
						</p>
					</div>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">{{trans.close_verb}}</button>
		</div>
	</div>
</div>