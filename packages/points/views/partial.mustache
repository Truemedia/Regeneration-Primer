<div class="list-group">
	{{#items}}
	<div class="score_container list-group-item" style="clear: both;">
		<input class="player_object" type="hidden" value="{{identifierReference}}" />
		<img class="img-thumbnail pull-right" src="{{content_pack}}/images/characters/({{identifierReference}})_mini.png" alt="Character" />
		<small>Player {{pid}}</small>
		<h5 class="list-group-item-heading">{{full_name}}</h5>
		<div class="row">
			<div class="col-xs-9" data-bind="with: health">
				<div class="progress">
				    <div class="progress-bar"
				    	 data-bind="style: { width: progress(), backgroundColor: color() }"
				    	 role="progressbar"
				    	 aria-valuenow="60"
				    	 aria-valuemin="0"
				    	 aria-valuemax="100"
				    	 style="background-image: none;">
						<span class="text-danger" data-bind="if: dead">DECEASED</span>
						<span data-bind="ifnot: dead">HP: (<span data-bind="text: hp"></span>/100)</span>
					</div>
				</div>
			</div>
			<div class="col-xs-1" data-bind="with: score">
				<strong data-bind="text: sp" style="color: {{characterColourScheme}};"></strong>
			</div>
		</div>
		<!-- Uncomment to debug HP and SP
			<button class="debug_button btn btn-xs btn-warning" href="#">Debug</button>
		-->
		<div class="row debug_controls">
			<div role="toolbar" class="btn-toolbar">
    			<div class="btn-group btn-group-xs" data-bind="with: score">
        			<button class="btn btn-default" type="button" data-bind="click: decreaseScore" value="{{pid}}">
        				<strong>-</strong> {{score_step}} sp
        			</button>
        			<button class="btn btn-default" type="button" data-bind="click: increaseScore" value="{{pid}}">
        				<strong>+</strong> {{score_step}} sp
        			</button>
      			</div>
      			<div class="btn-group btn-group-xs" data-bind="with: health">
        			<button class="btn btn-default" type="button" data-bind="click: decreaseHealth" value="{{pid}}">
        				<strong>-</strong> {{health_step}} hp
        			</button>
        			<button class="btn btn-default" type="button" data-bind="click: increaseHealth" value="{{pid}}">
        				<strong>+</strong> {{health_step}} hp
        			</button>
      			</div>
    		</div>
		</div>
		<!--
			Used to make sure data is fed to #my_score
			<div style="display: none;" data-bind="with: score"><div data-bind="singleton: sp"></div></div>
		-->
	</div>
	{{/items}}
</div>