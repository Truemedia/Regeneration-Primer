<!-- Debugging panels -->
<div id="debug_panels">
   <ul class="nav nav-tabs">
      <li><a data-toggle="tab" href="#score_debugging_panel">Score</a></li>
      <li><a data-toggle="tab" href="#mouse_debugging_panel">Mouse</a></li>
      <li><a data-toggle="tab" href="#atmosphere_debugging_panel">Atmosphere</a></li>
   </ul>
   <div class="tabbable">
      <div class="tab-content">
         <div id="score_debugging_panel" class="tab-pane">
            <p>Functionality to eventually incorporate</p>
            <button class="btn">Show Total scores</button>
            <button class="btn">Log scores</button>
         </div>
         <div id="mouse_debugging_panel" class="tab-pane">
            <dl>
               <dt id="mouse_x_label">Mouse X Position:</dt>
               <dd id="mouse_x_coords">Hover over canvas to see this change</dd>
               <dt id="mouse_y_label">Mouse Y Position:</dt>
               <dd id="mouse_y_coords">Hover over canvas to see this change</dd>
            </dl>
            <span id="mouse_clipboard_label">Mouse coords clipboard (Press Z to save current mouse coords)</span>
            <span id="saved_mouse_coords"></span>
         </div>
         <div id="atmosphere_debugging_panel" class="tab-pane">
            <form class="form-horizontal" role="form">
               <fieldset>
                  <legend>Gases ({{count}})</legend>
               	{{#items}}
                  <div class="form-group">

                  	<label for="{{gas_identifier}}" class="col-sm-2 control-label bg-{{pt_colour}}">
                        <span class="badge badge-warning pull-left">{{symbol}}</span>
                        <span class="push-right">{{gas_name}}</span>
                     </label>
                     <div class="col-sm-10">
                     	<input type="text" id="{{gas_identifier}}" value="{{real_ppmv}}" />
                        &nbsp;<span class="text-danger">PPVM</span>
                     	<span class="label label-warning">{{real_percent}}%</span>
                     </div>
                  </div>
               	{{/items}}
               </fieldset>
            </form>
         </div>
      </div>
   </div>
</div>
<!-- /Debugging panels -->