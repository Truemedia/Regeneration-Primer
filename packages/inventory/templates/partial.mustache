<div class="panel-group" id="accordion">
	{{#items}}
	<div class="panel panel-default">
		<div class="panel-heading">
			<a data-toggle="collapse" data-parent="#accordion" href="#{{dom_id}}">
				<span class="label label-default">{{item_id}}&nbsp;</span>&nbsp; {{name}} <span class="badge badge-default pull-right">{{type}}</span>
			</a>
		</div>
		<div id="{{dom_id}}" class="panel-collapse collapse">
			<div class="panel-body">
				<div class="item_actions">
					<a href="#"
					   id="{{name}}_info"
					   class="btn btn-xs btn-info"
					   data-toggle="popover"
					   data-content="{{description}}"
					   data-trigger="hover"
					   data-placement="right">?</a>
					<div class="btn-group">
						<a href="#" class="btn btn-xs btn-important">{{trans.action}}</a>
						<a href="#" data-toggle="dropdown" class="btn btn-xs btn-important dropdown-toggle">
							<span class="caret"></span>
						</a>
						<ul class="dropdown-menu">
							<li>
							    <a href="#">{{trans.reload}}</a>
							</li>
							<li>
								<a href="#">{{trans.chamber}}</a>
							</li>
							<li>
							    <a href="#">{{trans.throw_away_mag}}</a>
							</li>
							<li class="divider"></li>
							<li><a href="#">{{trans.put_away}}</a></li>
						</ul>
					</div>
					<a href="#" class="btn btn-xs btn-danger">{{trans.discard}}</a>
					<div class="btn-group">
						<a href="#" class="btn btn-xs btn-primary" data-bind="click: give">{{trans.give_to_player}}</a>
						<a href="#" data-toggle="dropdown" class="btn btn-xs btn-primary dropdown-toggle"><span class="caret"></span></a>
						<ul class="dropdown-menu">
						    <li class="divider"></li>
						    <li>
						    	<a href="#">{{trans.throw_away}}</a>
						    </li>
						</ul>
					</div>
				</div>

				{{#subitems}}
				<div class="row" style="padding-left: 16px;">
					<ul class="actual_bullet_list" data-bind="foreach: ammo">
						<li>
							<img src="{{img_dir}}items/Guns/Bullet.png" />
						</li>
					</ul>
				</div>
				{{/subitems}}

				<div class="row" style="padding-left: 16px;">
					<img src="{{img_dir}}items/Guns/{{name}}.png" alt="{{name}}" class="img-thumbnail" />
				</div>
			</div>
		</div>
	</div>
	{{/items}}
</div>