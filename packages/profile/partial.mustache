<!-- Original markup from http://bootsnipp.com/snipps/user-profile-in-tabs -->
<!-- http://bootsnipp.com/snipps/user-profile-thumbnails -->
<div>
<ul class="nav nav-tabs">
   <li class="active"><a href="#login_tab" data-toggle="tab">Profile</a></li>
   <li><a href="#role_tab" data-toggle="tab">Roles</a></li>
</ul>
<div id="myTabContent" class="tab-content">
   <div class="tab-pane active in" id="login_tab">
      <form id="tab" data-bind="ifnot: loggedin">
      <fieldset>
      	<div class="span4">
	         <label>Username:</label>
	         <input type="text" name="username" value="jsmith" class="input-xlarge" data-bind="value: username" placeholder="Enter your username here" />
	         <label>Password:</label>
	         <input type="password" name="password" class="input-xlarge" placeholder="You don't need a password" />
         </div>
      </fieldset>
      <fieldset>
         <div class="span4">
            <button class="btn btn-primary" data-bind="click: loginAsUser">Login</button>
            <button class="btn btn-primary" data-bind="click: loginAsGuest">Quick play as guest</button>
         </div>
         </fieldset>
      </form>
      <form id="tab" data-bind="if: loggedin">
      	<div class="span1">
    		<img src="{{content_pack}}/images/characters/({{character.identifierCamelCase}})_DefaultPose.png" alt="{{full_name}}" />
    	</div>
    	<div class="span4">
		    <blockquote>
		    <p>{{character.full_name}}</p>
		    <small><cite title="Source Title"><span data-bind="text: username"></span>, Wade Penistone</cite></small>
		    </blockquote>
		    <!-- Stats -->
		    <p>
			    <i class="icon-heart"></i>&nbsp; <span id="player_purgatory" class="alive"><span>Alive</span></span> <br />
			    <i class="icon-time"></i>&nbsp; Time elapsed: N/A <br />
			    <i class="icon-magnet"></i>&nbsp; Points: <span id="my_score">{{scoredefault}}</span><br />
		    </p>
		</div>
      </form>
   </div>
   <div class="tab-pane fade" id="role_tab">
      <form id="tab2">
         <fieldset>
            <div class="control-group">
               <label for="optionsCheckbox" class="control-label">Roles <br />(UI Permissions change based on this)</label>
               <div class="controls">
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="general_rbac">
                  	General player
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="admin_rbac">
                  	Administrator
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="mod_rbac">
                  	Moderator
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="frontdev_rbac">
                  	Front end web developer
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="backdev_rbac">
                  	Back end web developer
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="gfx_rbac">
                  	Graphic designer
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="audio_rbac">
                  	Audio Engineer
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="dbman_rbac">
                  	Database manager
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="owner_rbac">
                  	Owner
                  </label>
               </div>
            </div>
         </fieldset>
      </form>
   </div>
</div>