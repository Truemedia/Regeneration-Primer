<!-- Original markup from http://bootsnipp.com/snipps/user-profile-in-tabs -->
<!-- http://bootsnipp.com/snipps/user-profile-thumbnails -->
<div>
<ul class="nav nav-tabs">
   <li class="active"><a href="#login_tab" data-toggle="tab">{{trans.profile_phrs}}</a></li>
   <li><a href="#role_tab" data-toggle="tab">{{trans.roles_phrs}}</a></li>
</ul>
<div id="myTabContent" class="tab-content">
   <div class="tab-pane active in" id="login_tab">
      <form id="tab" data-bind="ifnot: loggedin">
      <fieldset>
      	<div class="span4">
	         <label>{{trans.username_phrs}}</label>
	         <input type="text" name="username" value="jsmith" class="input-xlarge" data-bind="value: username" placeholder="{{trans.enter-username_sntc}}" />
	         <label>{{trans.password_phrs}}</label>
	         <input type="password" name="password" class="input-xlarge" placeholder="{{trans.enter-password_sntc}}" />
         </div>
      </fieldset>
      <fieldset>
         <div class="span4">
            <button class="btn btn-primary" data-bind="click: loginAsUser">{{trans.login_phrs}}</button>
            <button class="btn btn-primary" data-bind="click: loginAsGuest">{{trans.quick-play_sntc}}</button>
         </div>
         </fieldset>
      </form>
      <form id="tab" data-bind="if: loggedin">
      	<div class="span1">
    		<img src="{{content_pack}}/images/characters/({{character.identifierCamelCase}})_DefaultPose.png" alt="{{full_name}}" />
    	</div>
    	<div class="span4">
		    <blockquote>
		    <p>{{character.full_name}}</p>
		    <small><cite title="Source Title"><span data-bind="text: username"></span>, Wade Penistone</cite></small>
		    </blockquote>
		    <!-- Stats -->
		    <p>
			    <i class="icon-heart"></i>&nbsp; <span id="player_purgatory" class="alive"><span>{{trans.alive_verb}}</span></span> <br />
			    <i class="icon-time"></i>&nbsp; {{trans.time-elapsed_phrs}} N/A <br />
			    <i class="icon-magnet"></i>&nbsp; {{trans.points_phrs}} <span id="my_score">{{scoredefault}}</span><br />
		    </p>
		</div>
      </form>
   </div>
   <div class="tab-pane fade" id="role_tab">
      <form id="tab2">
         <fieldset>
            <div class="control-group">
               <label for="optionsCheckbox" class="control-label">{{trans.roles_phrs}} <br />({{trans.ui-prompt_sntc}})</label>
               <div class="controls">
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="general_rbac">
                  	{{trans.general-player_phrs}}
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="admin_rbac">
                  	{{trans.administrator_phrs}}
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="mod_rbac">
                  	{{trans.moderator_phrs}}
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="frontdev_rbac">
                  	{{trans.frontend-webdev_phrs}}
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="backdev_rbac">
                  	{{trans.backend-webdev_phrs}}
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="gfx_rbac">
                  	{{trans.graphic-designer_phrs}}
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="audio_rbac">
                  	{{trans.audio-engineer_phrs}}
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="dbman_rbac">
                  	{{trans.database-manager_phrs}}
                  </label>
                  <label class="checkbox">
                  	<input type="checkbox" value="1" id="owner_rbac">
                  	{{trans.owner_phrs}}
                  </label>
               </div>
            </div>
         </fieldset>
      </form>
   </div>
</div>