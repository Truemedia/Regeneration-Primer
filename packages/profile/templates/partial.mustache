<div>
  <ul class="nav nav-tabs">
    <li class="active"><a href="#login_tab" data-toggle="tab">{{trans.profile_phrs}}</a></li>
    <li><a href="#role_tab" data-toggle="tab">{{trans.rules_phrs}}</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active in" id="login_tab">
      <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">{{trans.login_phrs}}</h3>
          </div>
          <div class="panel-body">
            <form id="tab" data-bind="ifnot: loggedin" accept-charset="UTF-8" role="form">
              <fieldset>
                <div class="form-group">
                  <input class="form-control" data-bind="value: username" placeholder="{{trans.username_phrs}}" name="username" type="text" />
              </div>
              <div class="form-group">
                <input class="form-control" placeholder="{{trans.password_phrs}}" name="password" type="password" value="" />
              </div>
              <div class="checkbox">
                  <label>
                    <input name="remember" type="checkbox" value="Remember" /> {{trans.rememberme_phrs}}
                  </label>
                </div>
                <button class="btn btn-primary btn-block" data-bind="click: loginAsUser">{{trans.login_phrs}}</button>
                <button class="btn btn-primary btn-block" data-bind="click: loginAsGuest">{{trans.quick-play_sntc}}</button>
              </fieldset>
            </form>
            <form id="tab" data-bind="if: loggedin">
              <div class="span1">
                <img src="{{content_pack}}/images/characters/({{*character.identifierCamelCase*}})_DefaultPose.png" alt="{{full_name}}" />
              </div>
              <div class="span4">
                <blockquote>
                  <p>{{*character.full_name*}}</p>
                  <small><cite title="Source Title"><span data-bind="text: username"></span>, Wade Penistone</cite></small>
                </blockquote>
                <!-- Stats -->
                <p>
                  <i class="icon-heart"></i>&nbsp; <span id="player_purgatory" class="alive"><span>{{trans.alive_verb}}</span></span> <br />
                  <i class="icon-time"></i>&nbsp; {{trans.time-elapsed_phrs}} N/A <br />
                  <i class="icon-magnet"></i>&nbsp; {{trans.points_phrs}} <span id="my_score">{{scoredefault}}</span><br />
                </p>
              </div>
            </form>
          </div>
          <!--<div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">{{trans.session_phrs}}</h3>
            </div>
            <div class="panel-body">
              <p>{{session}}</p>
            </div>
          </div>-->
      </div>
   </div>
   <div class="tab-pane fade" id="role_tab">
      <form id="tab2">
         <fieldset>
            <div class="control-group">
               <ul class="list-group">
                  <li class="list-group-item">
                    <label class="checkbox">
                    	<input type="checkbox" value="1" id="friendlyfire_rbac">
                    	{{trans.friendly-fire_phrs}}
                    </label>
                  </li>
                  <li class="list-group-item">
                    <label class="checkbox">
                    	<input type="checkbox" value="1" id="admin_rbac">
                    	{{trans.administrator_phrs}}
                    </label>
                  </li>
                  <li class="list-group-item">
                    <label class="checkbox">
                    	<input type="checkbox" value="1" id="mod_rbac">
                    	{{trans.moderator_phrs}}
                    </label>
                  </li>
                  <li class="list-group-item">
                    <label class="checkbox">
                    	<input type="checkbox" value="1" id="frontdev_rbac">
                    	{{trans.frontend-webdev_phrs}}
                    </label>
                  </li>
                  <li class="list-group-item">
                    <label class="checkbox">
                    	<input type="checkbox" value="1" id="backdev_rbac">
                    	{{trans.backend-webdev_phrs}}
                    </label>
                  </li>
                  <li class="list-group-item">
                    <label class="checkbox">
                    	<input type="checkbox" value="1" id="gfx_rbac">
                    	{{trans.graphic-designer_phrs}}
                    </label>
                  </li>
                  <li class="list-group-item">
                    <label class="checkbox">
                    	<input type="checkbox" value="1" id="audio_rbac">
                    	{{trans.audio-engineer_phrs}}
                    </label>
                  </li>
                  <li class="list-group-item">
                    <label class="checkbox">
                    	<input type="checkbox" value="1" id="dbman_rbac">
                    	{{trans.database-manager_phrs}}
                    </label>
                  </li>
                  <li class="list-group-item">
                    <label class="checkbox">
                    	<input type="checkbox" value="1" id="owner_rbac">
                    	{{trans.owner_phrs}}
                    </label>
                  </li>
               </ul>
            </div>
         </fieldset>
      </form>
   </div>
</div>